<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/createListing.css">
    <link rel="stylesheet" href="/css/nav.css">
    <title>VanMarket</title>
    <link rel="icon" type="image/x-icon" href="/icons/logo.svg">
</head>

<body>
    <main>
        <img src="/icons/back.svg" class="backBtn" onclick="history.back()">
        <div class="new-prdct-form">
            <form id="form" method="post" action="createListing">
                <div class="addImage display_image" data-image ="<%=post.post_image%>">
                    <div class="addImageIcon">
                        <img src="/icons/addImageIcon.svg" alt="">
                      
                    </div>
                    <div>Change default image</div>
                </div>
                <input id="files" class="imageUpload" type="file" name="fileUpload" accept="image/*" hidden>
                <input id="imageUrl" type="hidden" value="<%=post.post_image%>">

                <label class="details" for="title">Title</label>
                <input class="title rectangular-input" type="text" name="title" value="<%=post.title%>">

                <label class="details" for="price">Price</label>
                <input class="price rectangular-input" type="number" name="price" value="<%=post.price%>">

                <label class="details" for="condition">Condition</label>
                <select name="condition" id="condition" class="rectangular-input">
                    <option value="1">New</option>
                    <option value="2">Used - Like New</option>
                    <option value="3">Used - Good</option>
                    <option value="4">Used - Fair</option>
                </select>

                <label class="details" for="description">Description</label>
                <label class="details" for="description">Description</label>
                <textarea selected="" id="description" maxlength="500" class="description rectangular-input" type="text" name="description"><%=post.description%></textarea>

                 <label class="details" for="cateogty">cateogty</label>
                <select name="cateogty" id="cateogty" class="rectangular-input">
                    <option value="1" selected>Electronics</option>
                    <option value="2">Clothing</option>
                    <option value="3">Furniture</option>
                    <option value="4">Accessories</option>
                    <option value="5">Jewellery</option>
                    <option value="6">Food</option>
                    <option value="7">Other</option>
                </select>

                <label class="details " for="location">Location</label>
                <select name="Location" id="Location" class="rectangular-input">
                    <option value="1">Vancouver</option>
                    <option value="2">North Vancouver</option>
                    <option value="3">Burnaby</option>
                    <option value="4">Richmond</option>
                    <option value="5">Surrey</option>
                    <option value="6">Langley</option>
                    <option value="7">Coquitlam</option>
                    <option value="8">Port Coquitlam</option>
                    <option value="9">Maple Ridge</option>
                    <option value="10">Abbotsford</option>
                </select>
                <button id="create" class="submit-btn" type='submit'> Comfirm changes <img class="arrow" src="/icons/create.svg"> </button>
                
            </form>
        </div>
    </main>
    <nav class="nav">
        <a href="/home" class="nav_link">
            <img src="/icons/Home.svg">
        </a>
        <a href="" class="nav_link wished">
            <img src="/icons/wished.svg">
        </a>
        <a href="" class="nav_link postNew">
            <img src="/icons/add-filled.svg">
        </a>
        <a href="/chatList" class="nav_link">
            <img src="/icons/nav_chat.svg">
        </a>
        <a href="/profile" class="nav_link">
            <img src="/icons/me.svg">
        </a>
    </nav>
    <script>
        let autocomplete;
        function initMap() {
            autocomplete = new google.maps.places.Autocomplete(
                document.getElementById('autocomplete'), ({ 'country': [] }))

        }

        document.querySelector(".addImage").addEventListener("click", () => {
            document.querySelector('.imageUpload').click()

        })

    </script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBEEdlSNtFmvvp-6Gc3hS2dBxuP_0gDsI8&libraries=places&callback=initMap"
        async defer></script>
    <script src="/editPost.js" defer type="module"></script>
</body>

</html>