<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Van Market</title>
    <script src="/frontend.js" defer></script>
    <script src="/likedItems.js" defer></script>
    <link rel="stylesheet" href="css/likedItems.css">
    <link rel="stylesheet" href="css/nav.css">
</head>

<body>
    <main>
    <p class="title">Favourites
    <p>

    <div class="views">
        <a href="#" class="views_link">
            <img src="icons/Icons.svg" class="filter_icon"> Show by Icons
        </a>
        <a href="#" class="views_link">
            <img src="icons/List.svg" class="filter_icon">Show by List
        </a>
        <a href="#" class="views_link">
            <img src="icons/filter.png" class="filter_icon">Filter
        </a>
    </div>

    <section class="icon_views">
        <%for (let i=0; i < likeList.length; i++) {%>
            <div class="white_frame" id="<%=likeList[i].post_id%>">
                <div class="img_cropper">              
                    <img class="liked_img" src="<%= likeList[i].post_image%>">
                </div>
                <div class="item_description">
                    <p><%= likeList[i].title%></p>
                </div>
            </div>
            <%}%>
    </section>

</main>
    <nav class="nav">

        <a href="/home" class="nav_link">
            <img src="icons/Home.svg">
        </a>
        <a href="/likedItems" class="nav_link wished">
            <img src="/icons/wished.svg">
        </a>
        <a href="" class="nav_link postNew">
            <img src="/icons/Add.svg">
        </a>
        <a href="" class="nav_link">
            <img src="/icons/nav_chat.svg">
        </a>
        <a href="profile" class="nav_link">
            <img src="/icons/Profile.svg">
        </a>
    </nav>


    <div class="createNew displayNone">
        <div class="bar"></div>
        <p class="create_text">Create New Listing</p>
        <a href="#" class="catagories electronics"><img class="cata_icon" src="icons/electronics.svg"> Electronics</a>
        <a href="#" class="catagories clothes"> <img class="cata_icon" src="icons/clothes.svg"> Clothes</a>
        <a href="#" class="catagories furniture"> <img class="cata_icon" src="icons/furniture.svg"> Funiture</a>
        <a href="#" class="catagories other"> <img class="cata_icon" src="icons/other.svg"> Other</a>
    </div>
</body>

</html>