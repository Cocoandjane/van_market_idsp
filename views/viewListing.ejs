<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="/css/viewListing.css">
    <script type="module" src="/frontend.js" defer></script>
    <script type="module" src="/viewListing.js" defer></script>
    <title>Van Market</title>
</head>

<body>
    <main>
        <section class="top">
            <% //for(let p of post) { %>
                <div class="postInfo">
                    <div class="imgFrame">
                        <img class="postImage" src="<%=post.post_image%>">
                    </div>
                    <div class="lineOne">
                        <p class="title">
                           <strong> <%=post.title%></strong>
                        </p>
                        <p class="date">
                           Listed on <%=post.date%>
                        </p>
                    </div>

                    <div class="lineOne lineTwo">
                        <p class="price">
                            C$<%=post.price%>
                        </p>
                        <p class="location">
                            Vancouver, BC
                        </p>
                    </div>

                    <div class="lineThree">
                        <h3>Details</h3>
                    <p>
                        <%=post.description%>
                    </p>
                    </div>
                    
                </div <% //} %>
        </section>

        <div class="btnFrame">
            <a href="" class="all delete"><img class="icon" src="/icons/delete.svg">
                <p> Delete Listing</p>
            </a>
            <a href="" class="all edit"><img class="icon" src="/icons/edit.svg">
                <p> Edit Listing</p>
            </a>
            <a href="" class="all sold"><img class="icon" src="/icons/sold.svg">
                <p> Mark as sold</p>
            </a>
        </div>
    </main>

    <nav class="nav">
        <a href="/" class="nav_link">
            <img src="/icons/Home.svg">
        </a>
        <a href="" class="nav_link">
            <img src="/icons/Explore.svg">
        </a>
        <a href="" class="nav_link postNew">
            <img src="/icons/Add.svg">
        </a>
        <a href="" class="nav_link">
            <span class="material-symbols-outlined">
                chat_bubble
            </span>
        </a>
        <a href="profile" class="nav_link">
            <img src="/icons/Profile.svg">
        </a>
    </nav>
    <section class="delete-sec">
        <div class="card displayNone">
            <strong>Confirm Delete?</strong>
            <p>this can not be undone</p>
            <button class="no">No</button>
            <form action="/deletePost/<%=post.post_id%>" method="post">
            <button class="yes" type="submit" > COMFIRM DELETE</button>
        </form>
        </div>

    </section>
    <div class="createNew displayNone">
        <div class="bar"></div>
        <p class="create_text">Create New Listing</p>
        <a href="/createListing" class="catagories electronics"><img class="cata_icon"
                src="/icons/electronics.svg">Electronics</a>
        <a href="/createListing" class="catagories clothes"> <img class="cata_icon" src="/icons/clothes.svg"> Clothes</a>
        <a href="/createListing" class="catagories furniture"> <img class="cata_icon" src="/icons/furniture.svg">Funiture</a>
        <a href="/createListing" class="catagories other"> <img class="cata_icon" src="/icons/other.svg"> Other</a>
    </div>
    
</body>

</html>